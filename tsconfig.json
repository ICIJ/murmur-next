{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "jsx": "preserve",
    "module": "esnext",
    "resolveJsonModule":true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@/*": [ "lib/*"],
    },
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
